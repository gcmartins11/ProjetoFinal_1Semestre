<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/loginCadastrar.css" />
    <title>Cadastro Tarefas</title>

</head>

<body>
    <div class="fundo">

        <div class="cabecalho">
            <h1>Cadastrar ou Fazer Login</h1>
            <img src="/img/sticky.png" alt="">
        </div>

        <div class="interior">
            <h2>Cadastre-se</h2>
            

            <form action="/Usuario/Cadastrar" method="POST">
                <label>
                    <!-- Nome -->
                    <input type="text" name="nome" placeholder="Nome" id="textbox" required>
                </label>
                <br>
                <label>
                    <!-- Email -->
                    <input type="email" name="email" placeholder="Email" id="textbox" required>
                </label>
                <br>
                <label>
                    <!-- Senha -->
                    <input type="password" name="senha" placeholder="Senha" id="textbox" required>
                </label>
                <br>
                <label>
                    <!-- Confirmar Senha -->
                    <input type="password" name="confirmarSenha" placeholder="Confirmar senha" id="textbox" required>
                </label>
                <br>

                <input type="submit" value="Cadastrar" class="button">
                
                <h4 class="erro">
                @TempData["Mensagem"]
                </h4>
                <h4 class="cadastrado">
                @TempData["Cadastrado"]
                </h4>


            </form>
        </div>
        
        <div class="interior">
            <h2>Fazer Login</h2>
            <form action="/Usuario/Login" method="POST">
                <label>
                    <!-- Email -->
                    <input type="text" name="email" placeholder="Email" id="textbox">
                </label>
                <br>
                <label>
                    <!-- Senha -->
                    <input type="password" name="senha" placeholder="Senha" id="textbox">
                </label>
                    <br>
                <input type="submit" value="Fazer Login" class="button">
            </form>
        </div>

    </div>
</body>

</html>